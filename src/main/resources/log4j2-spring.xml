<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configuration>
<Configuration>
  <Appenders>
    <Console name="CONSOLE" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} %-5level[%t] %C: %msg%n%throwable" />
    </Console>
    <File name="STARTUP" fileName="./logs/startup.log">
      <PatternLayout pattern="%d{ISO8601} %-5level[%t] %C: %msg%n%throwable" />
    </File>
    <File name="INFO" fileName="./logs/info.log">
      <PatternLayout pattern="%d{ISO8601} %-5level[%t] %C: %msg" />
    </File>
    <File name="DEBUG" fileName="./logs/debug.log">
      <PatternLayout pattern="%d{ISO8601} %-5level[%t] %C: %msg" />
    </File>
    <File name="WARN" fileName="./logs/warn.log">
      <PatternLayout pattern="%d{ISO8601} %-5level[%t] %C: %msg" />
    </File>
    <File name="ERROR" fileName="./logs/error.log">
      <PatternLayout pattern="%d{ISO8601} %-5level[%t] %C: %msg%n%throwable" />
    </File>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="CONSOLE" />
      <AppenderRef level="info" ref="INFO" />
      <AppenderRef level="debug" ref="DEBUG" />
      <AppenderRef level="warn" ref="WARN" />
      <AppenderRef level="error" ref="ERROR" />
    </Root>
    <Logger name="com.lm_pakkanen.radio_pele_java.Config" level="info" additivity="false">
      <AppenderRef ref="STARTUP" />
    </Logger>
  </Loggers>
</Configuration>